{
  "name": "mcp-memory",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "node scripts/postbuild.mjs",
    "start": "node dist/index.js",
    "test": "npm run build && node --test dist/test/*.test.js",
    "db:init": "psql \"$DATABASE_URL\" -f migrations/001_init.sql",
    "db:vector": "psql \"$DATABASE_URL\" -f migrations/002_pgvector.sql",
    "db:aliases": "psql \"$DATABASE_URL\" -f migrations/003_context_aliases.sql"
  },
  "dependencies": {
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/pg": "^8.11.10",
    "typescript": "^5.5.4"
  }
}
